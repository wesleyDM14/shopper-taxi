generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:postgres@localhost:5432/shopper_taxi"
}

model Driver {
  id        Int    @id
  nome      String
  descricao String
  carro     String
  taxa      Float
  km_min    Int

  rides       Ride[]
  avaliations Avaliation[]
}

model Ride {
  id          Int      @id @default(autoincrement())
  customerId  String
  origin      String
  destination String
  distance    Float
  duration    String
  value       Float
  date        DateTime @default(now())

  driverId Int
  driver   Driver @relation(fields: [driverId], references: [id], onDelete: Cascade)
}

model Avaliation {
  id      Int    @id @default(autoincrement())
  rating  Int
  comment String

  driverId Int
  driver   Driver @relation(fields: [driverId], references: [id], onDelete: Cascade)
}
